<%  posts = [
  "今日からProgateでRailsの勉強するよー！",
  "投稿一覧ページ作成中！"]
  
%>

<div id="post_wrapper">
  <div id="container">
      <div class="contents">
        <div class="recipe_list" id="index">
          <% posts.each do |post| %>
