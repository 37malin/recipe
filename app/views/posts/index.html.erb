<div id="post_wrapper">
  <div id="container">
      <div class="contents">
        <div class="recipe_list" id="index">
          <% @posts.each do |post| %>
            <div class="list_box">
                <%= image_tag('sample.jpg') %>
                <p><%= link_to(post.title,"/posts/:id") %></p>
            </div>
          <% end %>    
        </div>
      </div>
  </div>    
</div>